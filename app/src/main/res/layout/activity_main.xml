    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="276dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!--        chinh hang doc 2 bieu tuong-->
        <LinearLayout
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--            linearlayout nhom img va text,tao thanh 1 bieu tuong-->
            <LinearLayout
                android:layout_width="92dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgQLSV"
                    android:layout_width="match_parent"
                    android:layout_height="74dp"
                    android:onClick="QUANLYSINHVIEN"
                    android:src="@drawable/ic_sv">

                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="quan ly sinh vien"></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="92dp"
